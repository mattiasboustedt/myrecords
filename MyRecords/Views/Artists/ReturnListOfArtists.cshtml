@model IEnumerable<MyRecords.Models.Artist>

@{
    ViewBag.Title = "Artists";
}

<h2>Artists Contained in the XML-file.</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3">
            <div class="thumbnail">
                <img src="http://placehold.it/242/200" alt="Placeholder img">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.ArtistName)</h3>
                    <h4>@Html.DisplayFor(modelItem => item.Country)</h4>
                </div>
            </div>
        </div>
    }
</div>
